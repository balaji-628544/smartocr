<%-include("Header")%>

<style>
*{
    border:0;
}
.cont{
    height:200px;
    width:300px;
    background-color: rgb(131, 123, 123);
    margin:30px;
    border-radius: 20px;
    padding:10px;
    align-content: end;
    box-sizing:content-box;
}
input{
    border-radius:10px;
    position: relative;
    left: 20px;
    margin-top: 10px;
}
.gettext{
    position: relative;
    top:20px;
    left:43px;
    
    
}
img{
    height:80%;
    width:80%;
    margin-left: 10%;
    border-radius: 20px;;
}

.HomeBody{
    height:80vh;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
}
</style>
<form method="post" enctype="multipart/form-data" action="/Home">
<div class="HomeBody">
    <div class="cont">
        <img  class="img"/> 
        <input type="file" name="image" class="file" >
       
        <button class="gettext" type="submit">Get text</button>
   </div>
   
</div>
</form>
<script>

const input = document.querySelector(".file");

const preview =document.querySelector('.img');



input.addEventListener('change', function(event) {
    const file = event.target.files[0]; // Get the uploaded file
    if (file) {
        const reader = new FileReader(); // Create a FileReader object

        reader.onload = function(e) {
            preview.src = e.target.result; // Set the image src to the file's data
            preview.style.display = 'block'; // Make the image visible
        };

        reader.readAsDataURL(file); // Read the file as a data URL
    } else {
        preview.style.display = 'none'; // Hide the image if no file is selected
    }
});
</script>

